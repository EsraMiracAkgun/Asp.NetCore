@model DotNetCoreProject.Web.ViewModels.Manage.RoleViewModel

@{
    ViewData["Title"] = "EditRole";
}

<h4>@Model.Name Rolünü Düzenle</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="EditRole">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>

            <div class="form-group">
                <label asp-for="Name" class="control-label"></label>
                <input asp-for="Name" class="form-control" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Kaydet" class="btn btn-info" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Roles">Roller Listesine Dön</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}